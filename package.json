{
  "name": "git-lite-cli",
  "version": "2.0.5",
  "description": "A lightweight CLI tool for seamless GitHub automationâ€”create, initialize, and push repositories with a single command.",
  "keywords": [
    "GitHub",
    "cli",
    "automation",
    "git",
    "repository",
    "repo-management",
    "developer-tools",
    "lightweight",
    "command-line",
    "workflow",
    "productivity",
    "devops",
    "git-automation",
    "project-setup",
    "open-source"
  ],
  "homepage": "https://github.com/NikhilKatkuri/git-lite-cli#readme",
  "bugs": {
    "url": "https://github.com/NikhilKatkuri/git-lite-cli/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NikhilKatkuri/git-lite-cli.git"
  },
  "license": "MIT",
  "author": "NIKHIL KATKURI",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "git-lite-cli": "dist/index.js",
    "glc": "dist/index.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "cli": "npx tsx src/index.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "lint:check": "eslint src --ext .ts --max-warnings 0",
    "check": "npm run format:check && npm run lint:check",
    "fix": "npm run format && npm run lint:fix",
    "clean": "if exist dist rmdir /s /q dist",
    "prepublishOnly": "npm run clean && npm run build && npm run check",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "axios": "^1.11.0",
    "terminal-image": "^3.1.1"
  },
  "overrides": {
    "phin": "^3.7.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
