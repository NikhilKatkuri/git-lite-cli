{
    "name": "git-lite-cli",
    "version": "3.0.0",
    "description": "A high-performance, developer-friendly CLI tool designed to simplify complex Git workflows with safety and best practices built-in.",
    "keywords": [
        "git",
        "cli",
        "github",
        "version-control",
        "developer-tools",
        "git-workflow",
        "git-assistant"
    ],
    "homepage": "https://github.com/NikhilKatkuri/git-lite-cli#readme",
    "bugs": {
        "url": "https://github.com/NikhilKatkuri/git-lite-cli/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/NikhilKatkuri/git-lite-cli.git"
    },
    "license": "MIT",
    "author": {
        "name": "Nikhil Katkuri",
        "email": "nikhilkatkuri@gmail.com",
        "url": "https://github.com/NikhilKatkuri"
    },
    "type": "module",
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "require": "./dist/index.js",
            "types": "./dist/index.d.ts"
        }
    },
    "bin": {
        "glc": "./dist/index.js"
    },
    "files": [
        "dist/**/*",
        "README.md",
        "LICENSE",
        "SECURITY.md"
    ],
    "engines": {
        "node": ">=18.0.0"
    },
    "packageManager": "pnpm@9.0.0",
    "scripts": {
        "build": "tsc",
        "build:clean": "powershell -Command \"Remove-Item -Recurse -Force dist -ErrorAction SilentlyContinue\" && tsc",
        "dev": "ts-node src/index.ts",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "lint": "tsc --noEmit",
        "prepublishOnly": "npm run build:clean",
        "prepack": "npm run build",
        "release": "release-it",
        "typecheck": "tsc --noEmit"
    },
    "devDependencies": {
        "@tsconfig/node24": "^24.0.3",
        "@types/node": "^25.0.3",
        "prettier": "^3.7.4",
        "release-it": "^19.2.2",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.3"
    },
    "dependencies": {
        "@clack/prompts": "^0.11.0",
        "commander": "^14.0.2",
        "conf": "^15.0.2",
        "execa": "^9.6.1",
        "picocolors": "^1.1.1",
        "undici": "^7.16.0"
    }
}
