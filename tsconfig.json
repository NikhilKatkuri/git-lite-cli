{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "@tsconfig/node24/tsconfig.json",
    "compilerOptions": {
        "types": ["node"],
        /* Project references and incremental builds for speed */
        "incremental": true,
        "composite": true,

        /* Modules - Use NodeNext for native ESM support */
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ES2023",

        /* Output structure */
        "rootDir": "./src",
        "outDir": "./dist",
        "sourceMap": true,

        /* Strictness and interop constraints */
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "verbatimModuleSyntax": true,
        "isolatedModules": true,
        "noUncheckedIndexedAccess": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
